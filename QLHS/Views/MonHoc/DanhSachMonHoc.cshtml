@model IEnumerable<QLHS.Models.MonHoc>

@{
    ViewBag.Title = "Danh Sách Môn Học";
    Layout = "~/Views/Shared/_LayoutMainAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h2>Danh Sách Môn Học</h2>
        @using (Html.BeginForm("DanhSachMonHoc", "MonHoc", FormMethod.Get))
        {
            <div class="form-group form-inline">
               <h4> Tìm môn học: @Html.TextBox("SearchString", "", new { @class = "form-control" })  <input type="submit" class="btn btn-default" value="Tìm" /> </h4> 
            </div>
            <table class="table">
                <tr>
                    <th style="color:black">
                        <span>Mã Môn</span>
                    </th>
                    <th style="color:black">
                        <span>Tên Môn</span>
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.MaMon)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.TenMon)
                        </td>
                        <td style="color:black">
                            <button class="btn" onclick="NavigateToEdit('@item.MaMon', event)">Cập Nhật</button>
                            <button class="btn" onclick="NavigateToDelete('@item.MaMon', event)">Xóa</button>
                        </td>
                    </tr>
                }

            </table>
        }

    </section>
</section>

<script>
    function NavigateToEdit(id, event) {
        event.preventDefault();
        window.location.href = "/MonHoc/ChinhSua/" + id;
    }

    function NavigateToDelete(id, event) {
        event.preventDefault();
        window.location.href = "/MonHoc/Xoa/" + id;
    }
</script>