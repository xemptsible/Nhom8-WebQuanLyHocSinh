@model QLHS.Models.GiaoVien

@{
    ViewBag.Title = "Thêm Giáo Viên";
    Layout = "~/Views/Shared/_LayoutMainAdmin.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>

<section id="main-content">
    <section class="wrapper">
        <section class="w3l-hotair-form">
            <div class="container">
                <!-- /form -->
                <div class="workinghny-form-grid">
                    @using (Html.BeginForm())
                    {
                        <div class="main-hotair">
                            <div class="content-wthree">
                                @Html.AntiForgeryToken()
                                <h3>Thêm Giáo Viên</h3>
                                <form action="#" method="post">
                                    <div class="user-detail">
                                        <div class="input-box">
                                            <span class="detail">Tài Khoản</span>
                                            @Html.EditorFor(model => model.TAIKHOAN, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.TAIKHOAN, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Mật Khẩu</span>
                                            @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Họ Tên GV</span>
                                            @Html.EditorFor(model => model.HoTenGV, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.HoTenGV, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Giới Tính</span>
                                            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Ngày Sinh</span>
                                            @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Địa Chỉ</span>
                                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">SĐT</span>
                                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Vai Trò</span>
                                            @Html.EditorFor(model => model.Role, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Trạng Thái</span>
                                            @Html.CheckBoxFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control", style = "field-validation-error" } })
                                            @Html.ValidationMessageFor(model => model.TrangThai, "False", new { @class = "text-danger" })
                                        </div>
                                        @if (ViewBag.ErrorMessage != null)
                                        {
                                            <div class="input-box">
                                                <span class="detail" style="color: red">@ViewBag.ErrorMessage</span>
                                            </div>
                                        }
                                    </div>
                                    <button class="btn" type="submit">Thêm</button>
                                </form>
                            </div>
                            <div class="w3l_form align-self">
                                <div class="left_grid_info">
                                    <img src="~/images/1.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- //form -->
            </div>
        </section>
    </section>
</section>

