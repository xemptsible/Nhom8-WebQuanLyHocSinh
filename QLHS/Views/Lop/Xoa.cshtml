@model QLHS.Models.Lop

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_LayoutMainAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <section class="w3l-hotair-form">
            <div class="container">
                <!-- /form -->
                <div class="workinghny-form-grid">
                    @using (Html.BeginForm())
                    {
                        <div class="main-hotair">
                            <div class="content-wthree">
                                @Html.AntiForgeryToken()
                                <h3>Xóa lớp học</h3>
                                <form action="#" method="post">
                                    <div class="user-detail">
                                        <div class="input-box">
                                            <span class="detail">Mã Lớp: @Html.DisplayFor(model => model.MaLop)</span>
                                        </div>
                                        <h1></h1>
                                        <div class="input-box">
                                            <span class="detail">Tên Lớp: @Html.DisplayFor(model => model.TenLop)</span>
                                        </div>
                                        <h1></h1>
                                        <div class="input-box">
                                            <span class="detail">Khối: @Html.DisplayFor(model => model.Khoi)</span>
                                            <h1></h1>
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Năm Học: @Html.DisplayFor(model => model.NamHoc)</span>
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">Số Lượng: @Html.DisplayFor(model => model.Quantity)</span>
                                        </div>
                                        <div class="input-box">
                                            <span class="detail">GVCN: @Html.DisplayFor(model => model.GVCN)</span>
                                        </div>
                                    </div>
                                    <button class="btn" type="submit">Xóa</button>
                                    <h1></h1>
                                    <div>
                                        @Html.ActionLink("Trở về", "DanhSachLop")
                                    </div>
                                </form>
                            </div>
                            <div class="w3l_form align-self">
                                <div class="left_grid_info">
                                    <img src="~/images/1.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- //form -->
            </div>
        </section>
    </section>
</section>