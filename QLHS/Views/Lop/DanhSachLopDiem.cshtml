@model IEnumerable<QLHS.Models.Lop>

@{
    ViewBag.Title = "Danh sách lớp";
    Layout = "~/Views/Shared/_LayoutMainAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h2>Chọn Lớp</h2>
        @using (Html.BeginForm("DanhSachLopDiem", "Lop", FormMethod.Get))
        {
            <table class="table">
                <tr>
                    <th style="color:black">
                        <span>Mã Lớp</span>
                    </th>
                    <th style="color:black">
                        <span>Tên Lớp</span>
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.MaLop)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.TenLop)
                        </td>
                        <td style="color:black">
                            <button class="btn">@Html.ActionLink("Chọn", "DanhSachHocSinhTheoLopDiem", "HocSinh", new { id_class = item.MaLop }, null)</button>
                        </td>
                    </tr>
                }

            </table>
        }
    </section>
</section>