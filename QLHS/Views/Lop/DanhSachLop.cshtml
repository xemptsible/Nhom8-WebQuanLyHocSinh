@model IEnumerable<QLHS.Models.Lop>

@{
    ViewBag.Title = "Danh sách lớp";
    Layout = "~/Views/Shared/_LayoutMainAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h2>Danh Sách Lớp Học</h2>
        @using (Html.BeginForm("DanhSachLop", "Lop", FormMethod.Get))
        {
            <div class="form-group form-inline">
                <h4> Tìm lớp học: @Html.TextBox("SearchString", "", new { @class = "form-control" })  <input type="submit" class="btn btn-default" value="Tìm" /> </h4>
            </div>

            <table class="table">
                <tr>
                    <th style="color:black">
                        <span>Mã Lớp</span>
                    </th>
                    <th style="color:black">
                        <span>Tên Lớp</span>
                    </th>
                    <th style="color:black">
                        <span>Khối</span>
                    </th>
                    <th style="color:black">
                        <span>Năm Học</span>
                    </th>
                    <th style="color:black">
                        <span>SL Tổng</span>
                    </th>
                    <th style="color:black">
                        <span>SL Hiện Tại</span>
                    </th>
                    <th style="color:black">
                        <span>GVCN</span>
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.MaLop)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.TenLop)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.TenKhoi)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.NamHoc)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.SLHT)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.TenGVCN)
                        </td>
                        <td style="color:black">
                            <button class="btn" onclick="NavigateToEdit('@item.MaLop', event)">Cập Nhật</button>
                            <button class="btn" onclick="NavigateToDelete('@item.MaLop', event)">Xóa</button>
                            <button class="btn" onclick="Total('@item.MaLop', event)">Xem Học Sinh</button>
                        </td>
                    </tr>
                }

            </table>
        }
    </section>
</section>

<script>
    function NavigateToEdit(id, event) {
        event.preventDefault();
        window.location.href = "/Lop/ChinhSua/" + id;
    }

    function NavigateToDelete(id, event) {
        event.preventDefault();
        window.location.href = "/Lop/Xoa/" + id;
    }

    function Total(id_class, event) {
        event.preventDefault();
        window.location.href = "/HocSinh/DanhSachHocSinhTheoLop?id_class=" + id_class;
    }
</script>