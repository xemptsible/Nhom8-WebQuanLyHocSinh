@model IEnumerable<QLHS.Models.Khoi>

@{
    ViewBag.Title = "Danh Sách Khối";
    Layout = "~/Views/Shared/_LayoutMainAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h2>Danh Sách Khối</h2>
        @using (Html.BeginForm("DanhSachKhoi", "Khoi", FormMethod.Get))
        {
            <div class="form-group form-inline">
                <h4> Tìm khối: @Html.TextBox("SearchString", "", new { @class = "form-control" })  <input type="submit" class="btn btn-default" value="Tìm" /> </h4>
            </div>
            <table class="table">
                <tr>
                    <th style="color:black">
                        <span>Mã Khối</span>
                    </th>
                    <th style="color:black">
                        <span>Tên Khối</span>
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.MaKhoi)
                        </td>
                        <td style="color:black">
                            @Html.DisplayFor(modelItem => item.TenKhoi)
                        </td>
                        <td style="color:black">
                            <button class="btn" onclick="NavigateToEdit('@item.MaKhoi', event)">Cập Nhật</button>
                            <button class="btn" onclick="NavigateToDelete('@item.MaKhoi', event)">Xóa</button>
                        </td>
                    </tr>
                }

            </table>
        }

    </section>
</section>

<script>
    function NavigateToEdit(id_subject, event) {
        event.preventDefault();
        window.location.href = "/Khoi/ChinhSua/" + id_subject;
    }

    function NavigateToDelete(id_student, event) {
        event.preventDefault();
        window.location.href = "/Khoi/Xoa/" + id_student;
    }
</script>